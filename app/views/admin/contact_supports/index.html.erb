<div class="main-content">
  <div class="container-fluid">
    <div class="page-header">
      <div class="row align-contact_supports-end">
        <div class="col-lg-8">
          <div class="page-header-title">
            <i class="ik ik-inbox bg-blue"></i>
            <div class="d-inline">
              <h5>Contact Supports</h5>
            </div>
          </div>
        </div>
        <!--        <div class="col-lg-4">-->
        <!--          <nav class="breadcrumb-container" aria-label="breadcrumb">-->
        <%#= link_to "New contact_support", new_admin_contact_support_path, class: 'btn btn-primary' %>
        <!--          </nav>-->
        <!--        </div>-->
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header"><h3>All Contact Supports</h3></div>
          <div class="card-body">
            <table id="contact_support_data_table" class="table">
              <thead>
              <tr>
                <th>Full Name</th>
                <th>E-mail</th>
                <th>Contact</th>
                <th>Message</th>
                <th>Created at</th>
                <th class="nosort">&nbsp;</th>
              </tr>
              </thead>
              <tbody>
              <% @contact_support.each do |contact_support| %>
              <tr>
                <td><%= contact_support.name %></td>
                <td><%= contact_support.email %></td>
                <td><%= contact_support.contact %></td>
                <td><%= contact_support.message %></td>
                <td><%= contact_support.created_at %></td>

                                  <td>
                                    <div class="table-actions">
                <%#= link_to admin_contact_support_path(contact_support) do %>
<!--                                        <i class="ik ik-eye"></i>-->
                <%# end %>
                <%#= link_to edit_admin_contact_support_path(contact_support) do %>
<!--                                        <i class="ik ik-edit-2"></i>-->
                <%# end %>
                <%= link_to admin_contact_support_path(contact_support), method: :delete, data: {:confirm => 'Are you sure?'} do %>
                                        <i class="ik ik-trash-2"></i>
                <% end %>
                                    </div>
                                  </td>
              </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>


<footer class="footer">
  <div class="w-100 clearfix">
