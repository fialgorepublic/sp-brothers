
<div class="main-content">
  <div class="container-fluid">
    <div class="page-header">
      <div class="row align-items-end">
        <div class="col-lg-8">
          <div class="page-header-title">
            <i class="ik ik-inbox bg-blue"></i>
            <div class="d-inline">
              <h5>Users</h5>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header"><h3>All Users</h3></div>
          <div class="card-body">
            <table class="table">
              <thead>
              <tr>
                <th>Full Name</th>
                <th>Mobile Number</th>
                <th>Email</th>
                <th>Business Name</th>
                <th>Role</th>
                <th class="nosort">&nbsp;</th>
              </tr>
              </thead>
              <tbody>
              <% @users.each do |sample| %>
                <tr>
                  <td><%= sample.full_name%></td>
                  <td><%= sample.phone_no%></td>
                  <td><%= sample.email%></td>
                  <td><%= sample.business_name %></td>
                  <td><%= sample.role%></td>
<!--                  <td><%#= link_to 'View Item', admin_item_path(sample.item.id) %></td>-->

                  <td>
<!--                    <div class="table-actions">-->
                      <%#= link_to admin_request_sample_path(sample) do %>
<!--                        <i class="ik ik-eye"></i>-->
                      <%# end %>
                      <%= link_to admin_user_path(sample), method: :delete, data: {:confirm => 'Are you sure?'} do %>
                        <i class="ik ik-trash-2"></i>
                      <% end %>
<!--                    </div>-->
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


